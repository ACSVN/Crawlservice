script(type="text/javascript" src="https://js.stripe.com/v2/")
div
	div.row
		div.col-md-2
		div.col-md-8
			div.fade.in.modal#stripe(type='')
				div.modal-dialog
					div.modal-content
						div.modal-header
							h4.modal-title(style="text-align: center;") Payment Infomation
							button.close(type="button" id="btn-header-close" data-dismiss="modal" aria-hidden="true") x
						div.modal-body(style="text-align: left;")
							div.panel.panel-default#payment-info(style="display: block;")
								div.panel-body
									form#paymentFrm(action="/finish" method="POST" _lpchecked="1")
										div.form-group
											label NAME
											input.form-control.name(type="text" name="name" placeholder="Enter name" required="" autofocus="" style="background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;")
										div.form-group
											label EMAIL
											input.form-control.email(type="email" name="email" placeholder="Enter email" required="")
										
										div.row.payment-plans-info
											div.div-left
												div.form-group
													label AMOUNT
													div.amount-price
														input.form-control.amount(type="number" id="id-amount" name="amount" disabled="true")
														input.form-control.amount(type="hidden"  id="id-amount-h" name="amount" value="")
											div.div-right.pull-right
												div.form-group
													label CURRENCY
													input.form-control.currency(type="currency" name="currency" value="usd" disabled="true")
													//- input.form-control.currency(type="hidden" name="currency" value="usd")
