											label CARD NUMBER
											span.card-type (Visa, MasterCard, American Express)
											input.form-control.card-number(type="text" name="card_num" placeholder="Valid card number" required="" value="4242424242424242")
										div.row
											div.div-left
												div.form-group
													div.row
														label EXPIRY DATE
													div.expity
														input.form-control.card-expiry-month(type="text" name="exp_month" placeholder="MM" required="" value="12")
													div.expity
														input.form-control.card-expiry-year(type="text" name="exp_year" placeholder="YY" required="" value="2020")
											div.div-right.pull-right
												div.form-group
													label CVC CODE
													input.form-control.card-cvc(type="text" name="cvc" placeholder="CVC" required="" value="242")
										input#payBtn(type="submit" class="btn btn-success btn-lg btn-block" value="Submit Payment")
										input(type="hidden" name="update-payment-flg" value="")
							div.panel.panel-default#payment-status(style="display: none;")
								div.panel-body
									p.payment-status
